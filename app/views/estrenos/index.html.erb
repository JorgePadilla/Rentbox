<table width=882 height="40" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr> 
    <th height="40" align="center" nowrap background="/general/barra.gif" class="Headers"><font color="#FFFFFF" face="Arial, Helvetica, sans-serif"><strong>Estrenos</strong></font></th>
  </tr>
</table>
<table>
  <td bgcolor="#FFFFFF">


<%= link_to 'HOME', root_url %><br/>
<%= paginate @estrenos %><br/>
<% @estrenos.each do |estreno| %>
<table align="center">
  <tr valign="bottom"> 
    <td width="106" height="200" rowspan="3" valign="top">     
      <div align="center">
        <% if estreno.imagen.exists? then %>
        <%= image_tag estreno.imagen.url(:thumb) %>
        <% else %>
        <p> No hay imagen relacionada a este estreno.</p>
        <% end %>
      </div>
    </td>
    <td width="371" height="32" align="center" valign="middle" bordercolor="0" bgcolor="#f94a2d">
      <div align="center" class="mybody" >
        <font color="#FFFFFF">
          <b><%= estreno.titulo %></b>
        </font>
      </div>
    </td>
    <td width="202" height="32" align="center" valign="middle" bordercolor="0" bgcolor="#f94a2d" class="mybody">
      <font color="#FFFFFF">
        <div align="center">
          <% if estreno.fecha != nil %>
          <%= estreno.fecha %>
          <% else %>
          No posee fecha
          <% end %>
        </div>
      </font>
    </td>
    <td width="183" height="32" valign="middle">
      <div align="center">
	<% if estreno.url != nil %>
        <a href="<%= estreno.url %>" target="_blank">
          <img src="/estrenos/ver_corto.gif" width="80" height="30" border="0" align="absmiddle">
        </a>
	<% else %>
       <a href="#">
          <img src="/estrenos/ver_corto.gif" width="80" height="30" border="0" align="absmiddle">
        </a>
	<% end %>
      </div></td>
    </tr>
    <tr valign="bottom"> 
      <td height="168" colspan="2" rowspan="2" align="center" valign="top" bordercolor="0" class="Synopsis">
        <div align="left"> 
          <p class="mybody">
            <%= estreno.sinopsis %>
          </p>
          </div>
        </td>
      <td height="21" valign="top"><div align="center"> 
          <p class="mybody"
            <font color="#000000"><b><%= estreno.clasificacion %></b></font>
          </p>
        </div>
      </td>
    </tr>
    <tr valign="bottom"> 
      <td height="96" valign="top">
	<% if estreno.dvd %>
        <p align="center">
          <img src="/estrenos/dvd.svg" width="77" height="34">
        </p>
	<% end %>
	<% if estreno.bluray %>
        <p align="center">
          <img src="/estrenos/bluray.svg" width="77" height="41">
	</p>
	<% end %>
	<% if estreno.bluray3d %>
        <p align="center">
          <img src="/estrenos/bluray3D.svg" width="77" height="51">
        </p>
	<% end %>
      </td>
    </tr>
  </table>

<% end %>
  </td>
</table>


